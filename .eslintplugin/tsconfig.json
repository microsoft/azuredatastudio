{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"ES2020"
		],
		"module": "commonjs",
		"esModuleInterop": true,
		"alwaysStrict": true,
		"allowJs": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"newLine": "lf",
		"noEmit": true
	},
	"include": [
		"**/*.ts",
		"**/*.js"
	],
	"exclude": [
		"node_modules/**"
	]
}
