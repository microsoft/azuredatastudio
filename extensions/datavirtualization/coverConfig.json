{
	"enabled": true,
	"relativeSourcePath": "..",
	"relativeCoverageDir": "../../coverage",
	"ignorePatterns": [
		"**/node_modules/**",
		"**/libs/**",
		"**/lib/**",
		"**/htmlcontent/**/*.js",
		"**/*.bundle.js",
		"**/markdown-language-features/**",
		"**/media/*.js"
	],
	"includePid": false,
	"reports": [
		"json"
	],
	"verbose": false,
	"remapOptions": {
		"basePath": "../..",
		"useAbsolutePaths": true
	}
}
