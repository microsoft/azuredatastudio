{
	"name": "database-documentation",
	"displayName": "%displayName%",
	"description": "%description%",
	"publisher": "Microsoft",
	"version": "0.0.1",
	"license": "https://raw.githubusercontent.com/Microsoft/azuredatastudio/main/LICENSE.txt",
	"engines": {
		"vscode": "^1.25.0",
		"azdata": ">=1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:database-documentation.viewDocumentation"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "database-documentation.viewDocumentation",
				"title": "%database-documentation.start%"
			},
			{
				"command": "database-documentation.regenerateDocumentation",
				"title": "Regenerate documentation",
				"icon": {
					"light": "images/refresh-light.svg",
					"dark": "images/refresh-dark.svg"
				}
			},
			{
				"command": "database-documentation.saveDocumentationToDatabase",
				"title": "Save documentation to database",
				"icon": {
					"light": "images/upload-light.svg",
					"dark": "images/upload-dark.svg"
				}
			}
		],
		"menus": {
			"objectExplorer/item/context": [
				{
					"command": "database-documentation.viewDocumentation",
					"when": "connectionProvider == MSSQL && nodeType && nodeType =~ /^(Database|Schema|Table|View)$/ && mssql:engineedition != 11",
					"group": "export"
				}
			],
			"editor/title": [
				{
					"command": "database-documentation.regenerateDocumentation",
					"group": "navigation",
					"when": "documentOpen"
				},
				{
					"command": "database-documentation.saveDocumentationToDatabase",
					"group": "navigation",
					"when": "documentOpen"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Database Documentation Configuration",
			"properties": {
				"openAI.apiKey": {
					"type": "string",
					"default": "",
					"description": "API key for OpenAI"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"proposedapi": "node installTypings.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^13.11.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"azdata-test": "^1.x",
		"eslint": "^6.8.0",
		"glob": "^7.1.7",
		"mermaid": "^10.1.0",
		"mocha": "^9.1.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"openai": "^3.2.1",
		"vscode-nls": "^4.0.0",
		"vscode-languageclient": "5.2.1"
	}
}
