{
	"extends": "../shared.tsconfig.json",
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "./out",
		"lib": [
			"es6",
			"es2015.promise"
		],
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"declaration": false,
		"strict": false,
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
	},
	"exclude": [
		"node_modules"
	]
}
