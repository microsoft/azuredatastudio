# Update mimetype database to pickup workspace mimetype
update-mime-database /usr/share/mime &> /dev/null || :

%postun
if [ $1 = 0 ]; then
  rm -f /usr/bin/@@NAME@@
fi

# Update mimetype database for removed workspace mimetype
update-mime-database /usr/share/mime &> /dev/null || :

